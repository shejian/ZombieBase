<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/material_deep_orange_500</item>

        <item name="windowActionBar">false</item>
        <item name="actionBarSize">48dp</item>
        <item name="windowNoTitle">true</item>
        <item name="colorButtonNormal">@color/material_deep_orange_A700</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:windowBackground">@color/window_background_color</item>
    </style>

    <!-- 两种模式，A：fitsTRUE上下都不占用，可以设置底色 -->
    <style name="AppAppCompatTheme.fits.true" parent="AppTheme">
        <item name="android:fitsSystemWindows">false</item>
        <!-- true：不占用状态栏和虚拟键位置，false：占用，windowTranslucentNavigation为false时导致fitsSystemWindows强制true -->
        <!-- <item name="android:windowBackground">@color/window_background_color</item>-->
        <item name="android:windowTitleSize">48dp</item>
    </style>


    <!--  B：fitsFALSE上下占用，无法设置颜色和字色，但内容需要人为加长titlebar高度和底部的paddingBottom高度，以避免被操作栏挡住 -->
    <style name="AppAppCompatTheme.fits.false" parent="AppTheme">
        <item name="android:fitsSystemWindows">false
        </item><!-- true：不占用状态栏和虚拟键位置，false：占用，这样上下透明才有意义-->
        <item name="android:windowTitleSize">48dp</item>
    <!--    <item name="android:windowBackground">@color/window_background_color</item>-->
    </style>

    <style name="AppAppCompatTheme" parent="AppAppCompatTheme.fits.false"/>


    <style name="AppTheme.NoActionBar">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="RoundCornerBtnBgStroke">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_corner_btn_bg_stroke</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mainColor_new</item>
    </style>

    <style name="text_14_8a000000">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8a000000</item>
    </style>

</resources>